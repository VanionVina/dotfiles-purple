# Sound change notification
exec_always --no-startup-id volnoti
# Keyboard layoutud
exec --no-startup-id "setxkbmap -layout us,ru -option 'grp:alt_caps_toggle'"
# Touchpad tap to click
exec --no-startup-id "xinput set-prop 'DELL0A79:00 06CB:CE26 Touchpad' 'Synaptics Tap Action' 1 1 1 2 1 3"
# Start mpd
exec_always --no-startup-id mpd



# Always floating windows
for_window [class="cutefish-calculator" instance="cutefish-calculator"] floating enable
